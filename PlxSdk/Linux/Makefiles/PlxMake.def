#-----------------------------------------------------------------------------
#
#      File         :  PlxMake.def
#      Abstract     :  Include makefile components to build any target
#      Last Revision:  02-01-07
#
#-----------------------------------------------------------------------------



#=============================================================================
# Include standard common definitions
#=============================================================================
include $(PLX_SDK_DIR)/Linux/Makefiles/Common.def



#=============================================================================
# Include definitions for the tools (For driver, only needed for kernel 2.4)
#=============================================================================
ifeq ($(TGT_TYPE), Driver)
    ifeq ($(KERNEL_VER), 2.4)
        include $(PLX_SDK_DIR)/Linux/Makefiles/Gcc.def
    endif
else
    include $(PLX_SDK_DIR)/Linux/Makefiles/Gcc.def
endif



#=============================================================================
# Include definitions for building targets
#=============================================================================
ifeq ($(KERNELRELEASE),)
    include $(PLX_SDK_DIR)/Linux/Makefiles/Targets.def
endif
